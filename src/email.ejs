<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <body>
    <p>Source: <%=source%></p>

    <table border="1">
      <thead>
        <tr>
          <th></th>
          <th>Company</th>
          <th>Role</th>
        </tr>
      </thead>
      <tbody>
        <% jobs.forEach(job => { %>
        <tr>
          <td>
            <% if (job.logoUrl) { %>
            <img src="<%=job.logoUrl%>" style="max-width: 100px" />
            <% } else { %> N/A <% } %>
          </td>
          <td><%=job.company%></td>
          <td><a href="<%=job.link%>"><%=job.title%></a> (<%=job.age%>)</td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </body>
</html>
